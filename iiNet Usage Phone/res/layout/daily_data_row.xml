<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/daily_data_row"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:layout_weight="1" >
  
	<TextView
		android:id="@+id/daily_data_row_date"
		style="@style/daily_data_row"
		android:text="@string/daily_data_row_date" 
		android:layout_width="33dp"
		android:layout_weight="0"
		android:gravity="center_horizontal" />
    
	<TextView
		android:id="@+id/daily_data_row_peak"
		style="@style/daily_data_row"
		android:text="@string/daily_data_row_peak" />
	
	<TextView
		android:id="@+id/daily_data_row_offpeak"
		style="@style/daily_data_row"
		android:text="@string/daily_data_row_offpeak" />
    
	<TextView
		android:id="@+id/daily_data_row_upload"
		style="@style/daily_data_row"
		android:text="@string/daily_data_row_upload" />
    
	<TextView
		android:id="@+id/daily_data_row_freezone"
		style="@style/daily_data_row"
		android:text="@string/daily_data_row_freezone" />

	<TextView
		android:id="@+id/daily_data_row_total"
		style="@style/daily_data_row"
		android:textStyle="bold"
		android:text="@string/daily_data_row_total" />
             
</LinearLayout>