<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/application_margin" >

        <TextView
            android:id="@+id/dashboard_peak_title"
            style="@style/account_info_title"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Peak Data (7am to 12pm)" />

        <View
            android:id="@+id/dashboard_account_info_line"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/dashboard_peak_title"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/dashboard_peak_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dashboard_account_info_line"
            android:layout_marginBottom="-20dp"
            android:layout_marginTop="-20dp"
            android:text="60"
            android:textSize="130sp"
            android:typeface="serif" />

        <TextView
            android:id="@+id/peak_percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dashboard_account_info_line"
            android:layout_toRightOf="@+id/dashboard_peak_number"
            android:text="%"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/peak_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/dashboard_account_info_line"
            android:gravity="center_horizontal"
            android:paddingTop="5dp"
            android:text="USED/REMAINING"
            android:textColor="@color/application_h1_text_color"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/peak_title"
            android:text="Data Used/Remaining"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView1"
            android:text="24,546 (MB)"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/TextView01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/textView2"
            android:text="Daily Av. Used/Remaining"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/TextView02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/TextView01"
            android:text="1,027 (MB)"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>