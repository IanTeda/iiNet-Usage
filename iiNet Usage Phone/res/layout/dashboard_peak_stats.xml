<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-12dp"
    android:padding="@dimen/application_margin" >

    <TextView
        android:id="@+id/dashboard_peak_title"
        style="@style/account_info_title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Peak Data" />

    <TextView
        android:id="@+id/dashboard_peak_time"
        style="@style/account_info_title"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="(7am to 12pm)" />

    <View
        android:id="@+id/dashboard_account_info_line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/dashboard_peak_title"
        android:background="#ffffff" />

    <TextView
        android:id="@+id/dashboard_peak_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_account_info_line"
        android:layout_marginLeft="-8dp"
        android:layout_marginTop="-22dp"
        android:text="60"
        android:textSize="130sp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/peak_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dashboard_account_info_line"
        android:layout_toRightOf="@+id/dashboard_peak_number"
        android:text="%"
        android:textSize="22sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/peak_percent_used"
        style="@style/account_info_stat_used_title"
        android:layout_below="@+id/dashboard_account_info_line"
        android:layout_toLeftOf="@+id/peak_percent_used_slash"
        android:text="USED" />

    <TextView
        android:id="@+id/peak_percent_used_slash"
        style="@style/account_info_stat_used_title.alt"
        android:layout_below="@+id/dashboard_account_info_line"
        android:layout_toLeftOf="@+id/peak_percent_remaing"
        android:text=" / " />

    <TextView
        android:id="@+id/peak_percent_remaing"
        style="@style/account_info_stat_used_title.alt"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/dashboard_account_info_line"
        android:text="REMAINING" />

    <TextView
        android:id="@+id/peak_data_used"
        style="@style/account_info_cat_title"
        android:layout_below="@+id/peak_percent_used"
        android:layout_toLeftOf="@+id/peak_data_slash"
        android:text="Data Used" />

    <TextView
        android:id="@+id/peak_data_slash"
        style="@style/account_info_cat_title.alt"
        android:layout_below="@+id/peak_percent_used"
        android:layout_toLeftOf="@+id/peak_data_remaing"
        android:text=" / " />

    <TextView
        android:id="@+id/peak_data_remaing"
        style="@style/account_info_cat_title.alt"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/peak_percent_used"
        android:text="Remaining" />

    <TextView
        android:id="@+id/peak_data"
        style="@style/account_info_stat"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/peak_data_remaing"
        android:text="24,546 (MB)" />

    <TextView
        android:id="@+id/peak_daily_av"
        style="@style/account_info_cat_title"
        android:layout_toLeftOf="@+id/peak_daily_used"
        android:layout_below="@+id/peak_data"
        android:text="Daily Av. "/>
    
    <TextView
        android:id="@+id/peak_daily_used"
        style="@style/account_info_cat_title"
        android:layout_toLeftOf="@+id/peak_daily_slash"
        android:layout_below="@+id/peak_data"
        android:text="Used"/>
    
    <TextView
        android:id="@+id/peak_daily_slash"
        style="@style/account_info_cat_title.alt"
        android:layout_toLeftOf="@+id/peak_daily_remaing"
        android:layout_below="@+id/peak_data"
        android:text=" / "/>
    
    <TextView
        android:id="@+id/peak_daily_remaing"
        style="@style/account_info_cat_title.alt"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/peak_data"
        android:text="Remaining"/>

    <TextView
        android:id="@+id/peak_daily_data"
        style="@style/account_info_stat"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/peak_daily_remaing"
        android:text="1,027 (MB)"/>

</RelativeLayout>