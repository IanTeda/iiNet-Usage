<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_background_color"
    android:orientation="vertical" >

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar" />

    <include
        android:id="@+id/actionbar_menu"
        layout="@layout/actionbar_menu" />

    <TextView
        android:id="@+id/daily_data_title"
        style="@style/daily_data_period"
        android:text="@string/daily_data_period_title" />

    <include layout="@layout/line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/actionbar_menu_button"
        android:orientation="horizontal" >

        <TextView
            style="@style/daily_data_header"
            android:layout_width="@dimen/daily_data_date_width"
            android:layout_weight="0"
            android:text="@string/daily_data_row_date_header" />

        <ImageView
            style="@style/actionbar_separator"
            android:contentDescription="@string/actionbar_separator_description" />

        <TextView
            style="@style/daily_data_header"
            android:text="@string/daily_data_row_peak_header" />

        <ImageView
            style="@style/actionbar_separator"
            android:contentDescription="@string/actionbar_separator_description" />

        <TextView
            style="@style/daily_data_header"
            android:text="@string/daily_data_row_offpeak_header" />

        <ImageView
            style="@style/actionbar_separator"
            android:contentDescription="@string/actionbar_separator_description" />

        <TextView
            style="@style/daily_data_header"
            android:text="@string/daily_data_row_upload_header" />

        <ImageView
            style="@style/actionbar_separator"
            android:contentDescription="@string/actionbar_separator_description" />

        <TextView
            style="@style/daily_data_header"
            android:text="@string/daily_data_row_total_header" />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:background="@color/application_background_alt_color"
        android:orientation="vertical" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_daily_data" />

</LinearLayout>