<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/actionbar"
        layout="@layout/actionbar" />

    <include
        android:id="@+id/actionbar_menu"
        layout="@layout/actionbar_menu" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/application_background_color"
        android:orientation="horizontal"
        android:paddingBottom="1dp" >

        <TextView
            style="@style/listview_header"
            android:layout_width="33dp"
            android:layout_weight="0"
            android:text="Date" />

        <TextView
            style="@style/listview_header"
            android:text="Peak" />

        <TextView
            style="@style/listview_header"
            android:text="Offpeak" />

        <TextView
            style="@style/listview_header"
            android:text="Upload" />

        <TextView
            style="@style/listview_header"
            android:text="Freezone" />

        <TextView
            style="@style/listview_header"
            android:text="Total" />
    </LinearLayout>

    <ListView
        android:id="@android:id/list"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1.0"
        android:background="@color/application_background_alt_color"
        android:orientation="vertical" />

    <TextView
        android:id="@android:id/empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_daily_data" />

</LinearLayout>