<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:example="http://schemas.android.com/apk/res/au.id.teda.volumeusage.phone"
    xmlns:intPref="http://schemas.android.com/apk/res/au.id.teda.volumeusage.phone" >

    <!-- Parent Category for username & Password -->
    <PreferenceCategory android:title="@string/username_password_preferences_category_title" >

        <!-- Launch Username / Password Activity -->
        <Preference
            android:summary="@string/user_pass_summary"
            android:title="@string/user_pass_title" >
            <intent android:action=".activity.UserPassActivity" />
        </Preference>
    </PreferenceCategory>

    <!-- Application Behaviour Parent Category -->
    <PreferenceCategory android:title="Category" >
        <PreferenceScreen android:title="@string/application_behaviour_category_title" >
            <CheckBoxPreference
                android:defaultValue="true"
                android:key="hide_status_bar"
                android:summary="@string/hide_status_bar_summary"
                android:title="@string/hide_status_bar_title" />
            <CheckBoxPreference
                android:defaultValue="true"
                android:key="wifi_only"
                android:summary="@string/wifi_only_summary"
                android:title="@string/wifi_only_title" />
            <CheckBoxPreference
                android:defaultValue="false"
                android:key="show_refresh_dialog"
                android:summary="@string/show_refresh_dialog_summary"
                android:title="@string/show_refresh_dialog_title" />
        </PreferenceScreen>
    </PreferenceCategory>

</PreferenceScreen>