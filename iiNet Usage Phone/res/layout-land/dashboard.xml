<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/application_background_color"
    android:orientation="horizontal" >

    <include layout="@layout/actionbar_menu" />

    <include layout="@layout/line2_vert" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/application_padding"
        android:paddingRight="@dimen/application_padding" >

        <Button
            android:id="@+id/alertbox_button"
            style="@style/dashboard_alertbox_style"
            android:layout_margin="5dp"
            android:background="@drawable/dashboard_alertbox"
            android:onClick="onClickAlertboxButton"
            android:text="@string/alertbox_default"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <RelativeLayout
                android:id="@+id/peak"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingRight="@dimen/application_padding" >

                <TextView
                    android:id="@+id/landscape_peak_title"
                    style="@style/h1"
                    android:text="Peak" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/application_line_1_height"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/landscape_peak_title"
                    android:background="#ffffff" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/application_line_2_height"
                android:layout_height="fill_parent"
                android:background="#40ffffff" />

            <RelativeLayout
                android:id="@+id/landscape_offpeak"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:paddingLeft="@dimen/application_padding" >

                <TextView
                    android:id="@+id/landscape_offpeak_title"
                    style="@style/h1"
                    android:text="Offpeak" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/application_line_1_height"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/landscape_offpeak_title"
                    android:background="#ffffff" />

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>