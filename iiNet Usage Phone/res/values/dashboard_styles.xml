<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Alertbox styling -->
    <style name="dashboard_alertbox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:padding">@dimen/alertbox_padding</item>
        <item name="android:layout_margin">@dimen/application_padding</item>
        <item name="android:textColor">@color/alertbox_text_color</item>
        <item name="android:background">@drawable/dashboard_alertbox</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/alertbox_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Dashboard heading 1 -->
    <style name="dashboard_h1">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/application_h1_text_size</item>e
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Statistic Data -->
    <style name="dashboard_data">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/application_h2_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">@color/application_text_highlight_color</item>
        <item name="android:layout_marginTop">@dimen/dashboard_data_text_marginTop</item>
    </style>

    <style name="dashboard_data.land">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/application_padding</item>
    </style>

    <!-- Statistic data heading 1 -->
    <style name="dashboard_data_h1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dashboard_data_h1_text_paddingTop</item>
        <item name="android:textColor">@color/application_h1_text_color</item>
        <item name="android:textSize">@dimen/application_h2_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dashboard_data_h1.alt">
        <item name="android:textColor">@color/application_h2_text_alt_color</item>
    </style>

    <!-- Statistic data heading 2 -->
    <style name="dashboard_data_h2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/application_h3_text_size</item>
        <item name="android:paddingTop">@dimen/dashboard_data_h2_padding_top</item>
        <item name="android:textColor">@color/application_h2_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Statistic data heading 2 landscape -->
    <style name="dashboard_data_h2.land">
        <item name="android:gravity">right</item>
        <item name="android:width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/application_h2_text_size</item>
        <item name="android:paddingTop">0dp</item>
    </style>

    <!-- Alternate style for account information category titles -->
    <style name="dashboard_data_h2.alt">
        <item name="android:textColor">@color/application_h2_text_alt_color</item>
    </style>

    <style name="dashboard_button_overlay">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="dashboard_button_overlay.accountInfo">
        <item name="android:onClick">onAccountInfoClick</item>
    </style>

    <style name="dashboard_button_overlay.peakStats">
        <item name="android:onClick">onPeakStatsClick</item>
    </style>
    
    <style name="dashboard_button_overlay.peakLandStats">
        <item name="android:onClick">onPeakLandStatsClick</item>
    </style>
    
    <style name="dashboard_button_overlay.offpeakLandStats">
        <item name="android:onClick">onOffpeakLandStatsClick</item>
    </style>

    <style name="dashboard_peak_offpeak_number">
        <item name="android:textSize">@dimen/stats_number_text_size</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>