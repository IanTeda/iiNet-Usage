<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Username Password Activity Styles -->


    <!-- Edit Text Titles -->
    <style name="user_pass_h1">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/application_h1_text_size</item>
        <item name="android:paddingLeft">@dimen/application_h1_intent</item>
        <item name="android:paddingTop">@dimen/application_h1_line_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/application_h1_text_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:capitalize">characters</item>
    </style>

    <style name="user_pass_h1.land">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Edit Text -->
    <style name="user_pass_edit_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="user_pass_edit_text.land">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Text view style -->
    <style name="user_pass_text_view">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:paddingLeft">@dimen/application_h1_intent</item>
        <item name="android:textSize">@dimen/status_text_size</item>
        <item name="android:layout_marginTop">@dimen/application_h1_line_padding</item>
    </style>

</resources>