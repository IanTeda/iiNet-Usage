<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="actionbar_image_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@drawable/actionbar_button_background</item>
        <item name="android:paddingLeft">@dimen/actionbar_padding</item>
        <item name="android:paddingRight">@dimen/actionbar_padding</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="actionbar_separator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:src">@drawable/actionbar_separator</item>
    </style>

    <style name="actionbar_title_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/actionbar_title_text_size</item>
        <item name="android:paddingLeft">@dimen/actionbar_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/actionbar_title_color</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="actionbar_menu_button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/actionbar_menu_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/actionbar_menu_gradient_backgroud</item>
        <item name="android:padding">3dp</item>
        <item name="android:onClick">onActionbarMenuClick</item>
    </style>

    <style name="actionbar_menu_image_button">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/actionbar_menu_gradient_backgroud</item>
        <item name="android:onClick">onActionbarMenuClick</item>
    </style>

</resources>