<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Styles for data usage list view -->
    <style name="daily_data_header">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/application_h3_text_size</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="daily_data_row">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">@dimen/application_text_size</item>
        <item name="android:padding">@dimen/application_padding</item>
        <item name="android:singleLine">true</item>
    </style>

</resources>