<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@color/summary_background">
  
  <include android:id="@+id/action_bar" layout="@layout/action_bar" />
  	
	<ListView 
    android:id="@+id/archive_listview"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="0dip"
    android:layout_weight="1.0"
    android:background="@color/background_seperator_color" />
    
  <TextView 
    android:id="@android:id/empty"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:text="@string/no_history_data" />
    
</LinearLayout>
